{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "jsx": "react",
        "noImplicitAny": true,
        "removeComments": true,
        "newLine": "LF",
        "outDir": ".tmp/typescript",
        "baseUrl": "src",
        "lib": ["dom", "es6", "scripthost"]
    },
    "awesomeTypescriptLoaderOptions": {
        "cacheDirectory": ".tmp/awesome-typescript-loader"
    },
    "exclude": ["node_modules"]
}
