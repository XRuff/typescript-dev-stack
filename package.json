{
  "name": "typescript-html-devstack",
  "version": "0.1.0",
  "description": "Development stack for building modern web applications based on webpack using TypeScript 2.1 and Vue2.",
  "author": "Marek Štípek <mario.dweller@seznam.cz>",
  "contributors": [
    "Adam Hojka"
  ],
  "license": "MIT",
  "keywords": [
    "typescript",
    "webpack",
    "karma",
    "mocha",
    "coverage",
    "html"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/vaniocz/typescript-dev-stack.git"
  },
  "scripts": {
    "start": "webpack-dev-server --hot --content-base ./build",
    "test": "npm run mocha && npm run karma",
    "build": "webpack",
    "build:dev": "webpack -d",
    "lint": "tslint \"src/**/*.ts?(x)\"",
    "mocha": "mocha-webpack --webpack-config webpack.config.js \"tests/runner.js\" --no-interactive --colors",
    "mocha:coverage": "mocha-webpack --webpack-config webpack.config.js \"tests/runner.js\" -R mocha-multi --reporter-options spec=-,mocha-remap-istanbul=- --no-interactive --colors",
    "karma": "karma start",
    "karma:browser": "karma start",
    "karma:server": "karma start",
    "karma:browser:all": "karma start --detectBrowsers",
    "karma:coverage": "karma start",
    "karma:browser:coverage": "karma start",
    "karma:server:coverage": "karma start"
  },
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "es6-promise": "^4.0.5",
    "lodash": "^4.17.4",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/lodash": "^4.14.50",
    "@types/mocha": "^2.2.37",
    "@types/sinon": "^1.16.34",
    "@types/webpack-env": "^1.13.0",
    "@types/whatwg-fetch": "0.0.33",
    "autoprefixer": "^6.6.1",
    "awesome-typescript-loader": "^3.0.0-beta",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "electron": "^1.4.14",
    "exports-loader": "^0.6.3",
    "extract-loader": "^0.1.0",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "imports-loader": "^0.7.0",
    "istanbul-instrumenter-loader": "^1.2.0",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-detect-browsers": "^2.2.4",
    "karma-electron-launcher": "github:princed/karma-electron-launcher",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-remap-coverage": "^0.1.4",
    "karma-source-map-support": "^1.2.0",
    "karma-webpack": "^2.0.1",
    "mocha": "^3.2.0",
    "mocha-multi": "^0.10.0",
    "mocha-remap-istanbul": "^0.1.0",
    "mocha-typescript": "^1.0.15",
    "mocha-webpack": "^1.0.0-beta",
    "node-sass": "^4.3.0",
    "postcss-loader": "^1.2.2",
    "sass-loader": "github:jtangelder/sass-loader#change/webpack-2",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "tslint": "^4.3.1",
    "tslint-microsoft-contrib": "^4.0.0",
    "typescript": "^2.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-notifier": "^1.5.0",
    "webpack-output-ignore-plugin": "0.0.1",
    "webpack-split-by-path": "0.1.0-beta.1"
  }
}
